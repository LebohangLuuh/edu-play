<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_Layout"
    tools:context="com.example.English.MainActivity"
    tools:openDrawer="start">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange">

     <FrameLayout
         android:layout_width="match_parent"
         android:id="@+id/frameLayout"
         android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/days"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/days_foreground"
            app:flow_verticalGap="2dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextText"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toEndOf="@+id/count"
            app:layout_constraintTop_toTopOf="@+id/count"
            tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/count"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/number_foreground"
            app:layout_constraintEnd_toEndOf="@+id/editTextText"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/editTextText"
            app:layout_constraintTop_toBottomOf="@+id/editTextText"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/vowels"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/vowels_foreground"
            app:flow_verticalGap="2dp"
            app:layout_constraintEnd_toStartOf="@+id/count"
            app:layout_constraintStart_toStartOf="@+id/editTextText"
            app:layout_constraintTop_toTopOf="@+id/count"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/money"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/money_foreground"
            app:layout_constraintEnd_toStartOf="@+id/days"
            app:layout_constraintStart_toEndOf="@+id/vowels"
            app:layout_constraintTop_toBottomOf="@+id/count"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/calender_foreground"
            app:layout_constraintEnd_toEndOf="@+id/money"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/province"
            app:layout_constraintTop_toBottomOf="@+id/money"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/editTextText"
            android:layout_width="369dp"
            android:layout_height="55dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="none"
            android:text="@string/choose_an_activity"
            android:textAlignment="center"
            android:textColor="#1565C0"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04"
            tools:ignore="LabelFor,TextSizeCheck" />

        <ImageButton
            android:id="@+id/careers"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/career_foreground"
            app:layout_constraintEnd_toEndOf="@+id/calendar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/seasons"
            app:layout_constraintTop_toBottomOf="@+id/calendar"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/alphabets"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/alphabets_foreground"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="@+id/shapes"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/careers"
            app:layout_constraintTop_toBottomOf="@+id/colors"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/colors"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/colors_foreground"
            app:layout_constraintEnd_toEndOf="@+id/shapes"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/calendar"
            app:layout_constraintTop_toBottomOf="@+id/shapes"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/shapes"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/shapes_foreground"
            app:layout_constraintEnd_toEndOf="@+id/days"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/money"
            app:layout_constraintTop_toBottomOf="@+id/days"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/province"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/provinces_foreground"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintEnd_toStartOf="@+id/money"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/vowels"
            app:layout_constraintTop_toBottomOf="@+id/vowels"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/seasons"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/seasons_foreground"
            app:layout_constraintEnd_toStartOf="@+id/calendar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/province"
            app:layout_constraintTop_toBottomOf="@+id/province"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/phonics"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/phonics_foreground"
            app:layout_constraintEnd_toStartOf="@+id/careers"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/seasons"
            app:layout_constraintTop_toBottomOf="@+id/seasons"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/animals"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/animals_foreground"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintEnd_toEndOf="@+id/phonics"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/phonics"
            app:layout_constraintTop_toBottomOf="@+id/phonics"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/planets"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/planets_foreground"
            app:layout_constraintEnd_toEndOf="@+id/careers"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/careers"
            app:layout_constraintTop_toBottomOf="@+id/careers"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/traffic_Light"
            android:layout_width="110dp"
            android:layout_height="149dp"
            android:backgroundTint="@color/orange"
            android:foreground="@mipmap/robot_foreground"
            app:layout_constraintEnd_toEndOf="@+id/alphabets"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/alphabets"
            app:layout_constraintTop_toBottomOf="@+id/alphabets"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@tools:sample/avatars" />

       <androidx.appcompat.widget.Toolbar
           android:layout_width="match_parent"
           app:title="Choose an Activity"
           app:titleTextColor="@color/blue_Font"
           android:textAlignment="center"
           android:id="@+id/toolbar"
           android:background="@color/orange"
           android:elevation="3dp"
           android:layout_height="wrap_content"
           tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_bar" />

</androidx.drawerlayout.widget.DrawerLayout>